
<div class="body">
  <div class="container">
    <div class="row">
      <div class="col-xs-3">
        <h2>User info</h2>
        <table class="table">
          <tbody>
            <tr>
            <% if user_signed_in? %>
            <%= attachment_image_tag @user,:profile_image, size: '100x100', format: 'jpeg',fallback: "noimage.jpg" %>

            </tr>
            <tr>
            <th>name</th>
             <th><%= current_user.name %><th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= current_user.introduction %></th>
            </tr>
            <% end %>
          </tbody>
        </table>
         <div class="row">
          <%= link_to "", edit_user_path(@user.id), class: "col-xs-12 user_#{current_user.id} btn btn-default glyphicon glyphicon-wrench" %>
         </div>
           <h2>New book</h2>
          <%= form_for(@book) do |f| %>
          <label>Title</label>
          <%= f.text_field :title, class: "book_title" %>

          <label>Opinion</label>
          <%= f.text_area :body, class: "book_body" %>
          <div>
          <%= f.submit 'Create Book' %>
         </div>
       <% end %>
      </div>
      <div class="col-xs-9">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
             <tr>
              <th>image</th>
              <th>name</th>
              <th></th>
              <th colspan="3"></th>
            </tr>
            <tr>
             <% @users.each do |user| %>
              <td> <%= attachment_image_tag user, :profile_image, size: '50x50', format: 'jpeg',fallback: "noimage.jpg" %></td>
              <td><%=user.name%></td>
              <td><%= link_to "Show", user_path(user.id),class: "user_#{user.id}" %></td>
            </tr>
            <% end %>
          </thead>
        </table>
      </div>
    </div>
  </div>
 </div>
 <footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p class="copy">CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
 </footer>
</body>






