<div class="main-visual clearfix">
  <% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %>errors prohibited this obj from being saved</h2>
  </div>
  <% end %>
  <% @book.errors.full_messages.each do |message| %>
  <div class="form-error">
    <%= message %>
  </div>
  <% end %>
</div>
<div class="main-visual">
 <% if flash[:notice] %>
   <div class="flash">
   <%= flash[:notice] %>
   </div>
 <% end %>
</div>
<div class="body">
  <div class="container">
    <div class="row">
      <div class="col-xs-3">
        <h2>User info</h2>
        <table class="table">
          <tbody>
            <tr>
            <% if user_signed_in? %>
            <%= attachment_image_tag @user, :profile_image, size: '100x100', format: 'jpeg',fallback: "noimage.jpg" %>
            </tr>
            <tr>
            <th>name</th>
             <th><%= current_user.name %><th>
            </th>
            </th>
            <tr>
              <th>introduction</th>
              <th><%= current_user.introduction %></th>
            <% end %>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to "", edit_user_path(@user.id), class: "col-xs-12 user_#{current_user.id} btn btn-default glyphicon glyphicon-wrench" %>
        </div>
           <h2>New book</h2>
          <%= form_for(@book) do |f| %>
          <label>Title</label>
          <%= f.text_field :title, class: "book_title" %>

          <label>Opinion</label>
          <%= f.text_area :body, class: "book_body" %>
          <div>
          <%= f.submit 'Create Book' %>
         </div>
       <% end %>
      </div>
      <div class="col-xs-9">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
            <tr>
             <% @books.each do |book| %>
              <td><%= attachment_image_tag book.user, :profile_image, size: '50x50', format: 'jpeg',fallback: "noimage.jpg" %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%=book.body%></td>
            </tr>
            <% end %>
          </thead>
        </table>
      </div>
    </div>
  </div>
 </div>
 <footer>
  <div class="container">
    <div class="row">
      <div class="col-xs-3 col-xs-offset-9">
        <p class="copy">CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
 </footer>
</body>






