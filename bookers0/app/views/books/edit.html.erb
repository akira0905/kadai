  <% end %>
</div>
 <div class="body">
  <div class="container">
    <div class="row">
      <div class="top-message col-mg-offset-3ncol-md-6">
       <% if @book.errors.any? %>
        <div id="error_explanation">
         <h2><%= @book.errors.count %>errors prohibited this obj from being saved</h2>
         <% end %>
       <% @book.errors.full_messages.each do |message| %>
        <div class="form-error">
        <%= message %>
        </div>
       <% end %>
