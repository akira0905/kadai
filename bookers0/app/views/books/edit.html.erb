        <%= form_for(@book) do |f| %>

         <label class="edi">Title</label>
         <%= f.text_field :title %>

        <label class="edi btn">Body</label>
        <%= f.text_area :body %>
        <div>
      <%= f.submit 'Update Book' %>
      </div>
      <% end %>
     <div class="sb">
     <%= link_to "Show",book_path,class: "book_#{@book.id}"%>
       |
      <%= link_to 'Back', book_path,class: "back"%>
     </div>
   </div>
  </div>
 </div>
</div>
